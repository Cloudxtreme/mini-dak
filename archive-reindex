#
# Requires: apt-utils
#

# Import library

. archive-lib

#
# Main
#

echo_time "-> Regenerating .changes files list..."
find $pool_dir -name '*.changes' | changes_canonic | \
  sort > $cache_dir/changes.list

echo_time "-> Regenarating file lists..."
cat $cache_dir/changes.list | while read package suite arch version path; do
  archive_file=`changes_strip < $path`
  basepath=`dirname $path`
  basedir=${basepath#$archive_dir/}
  files=`echo "$archive_file" | fetch_files`
  if [ $arch != source ]; then
    (
      echo "$files" | grep "_\($arch\|all\)\.u\?deb" | while read file; do
        echo "$basedir/$file"
      done
    ) >> $cache_dir/files_${suite}_$arch.list.new
  fi
done

#echo_time "-> Removing existing file lists..."
#rm -f $cache_dir/files_*_*.list

echo_time "-> Moving new file lists into place..."
for suite in $suite_list; do
  touch $cache_dir/files_${suite}_all.list.new
  mv -f $cache_dir/files_${suite}_all.list.new \
        $cache_dir/files_${suite}_all.list

  for arch in $(get_suite_arches $suite); do
    if [ $arch != source ]; then
      touch $cache_dir/files_${suite}_$arch.list.new
      mv -f $cache_dir/files_${suite}_$arch.list.new \
            $cache_dir/files_${suite}_$arch.list
      cat $cache_dir/files_${suite}_all.list >> \
          $cache_dir/files_${suite}_$arch.list
    fi
  done
done

echo_time "-> Regenerating indexes..."
apt-ftparchive generate $apt_config
for suite in $suite_list; do
  rm -f $dists_dir/$suite/Release
  apt-ftparchive -c $apt_config \
    -o APT::FTPArchive::Release::Suite="$suite" \
    -o APT::FTPArchive::Release::Architectures="$(get_suite_arches $suite)" \
    -o APT::FTPArchive::Release::Components="$(get_suite_sections $suite)" \
    release $dists_dir/$suite \
    > $dists_dir/$suite/.Release
  mv -f $dists_dir/$suite/{.Release,Release}
done

echo_time "-> Done."

